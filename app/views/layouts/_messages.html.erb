<% if flash.present? %>
  <div class="container">
    <% flash.each do |name, message| %>
      <div
        class="alert alert-dismissible fade show mt-4 <%= alert_type(name) %> "
        role="alert"
      >
        <%= message %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    <% end %>
    </div>
  </div>
<% end %>
